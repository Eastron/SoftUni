using System;
		
public class Program
{
	public static void Main()
	{
		
		
		while(true)
		{
			int n = int.Parse(Console.ReadLine());
			if(n % 2 == 0)
			{
				Console.WriteLine("The number is: {0}", Math.Abs(n));
				break;
			}
			else
			{
				Console.WriteLine("Please write an even number.");
			}
		}
	}
}
