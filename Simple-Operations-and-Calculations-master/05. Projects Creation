using System;

namespace Task_12
{
    class ProjectsCreation
    {
        static void Main(string[] args)
        {
            string name = Console.ReadLine();
            int project = int.Parse(Console.ReadLine());
            int hours = project * 3;
            Console.WriteLine("The architect {0} will need {1} hours to complete {2} project/s.", name, hours, project);
        }
    }
}
