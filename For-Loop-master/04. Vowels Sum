using System;

namespace Task_04
{
    class VowelsSum
    {
        static void Main(string[] args)
        {
            string command = Console.ReadLine();

            int a = 1;
            int e = 2;
            int i = 3;
            int o = 4;
            int u = 5;

            int sum = 0;

            for (int j = 0; j < command.Length; j++)
            {
                char letter = command[j];
                switch (letter)
                {
                    case 'a': sum += a;break;
                    case 'e': sum += e;break;
                    case 'i': sum += i;break;
                    case 'o': sum += o;break;
                    case 'u': sum += u;break;
                }
            }
            Console.WriteLine(sum);
        }
    }
}
